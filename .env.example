# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/labour_chowk"
MONGODB_URI="mongodb+srv://username:password@cluster0.mongodb.net/digital_labour_chowk?retryWrites=true&w=majority"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-refresh-token-secret-here"

# SMS/WhatsApp Configuration (MSG91)
MSG91_AUTH_KEY="your-msg91-auth-key"
MSG91_TEMPLATE_ID="your-msg91-template-id"
MSG91_SENDER_ID="your-msg91-sender-id"

# Twilio Configuration (Alternative)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@labourchowk.com"

# File Storage Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="labour-chowk-uploads"

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# Airtable Configuration
AIRTABLE_API_KEY="your-airtable-api-key"
AIRTABLE_BASE_ID="your-airtable-base-id"

# Application Configuration
NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"